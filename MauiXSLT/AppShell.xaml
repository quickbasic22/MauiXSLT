<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiXSLT.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiXSLT"
    Shell.FlyoutBehavior="Flyout"
    Title="Shell Flyout Page">

    <ShellContent
        Title="WebViewCSS"
        ContentTemplate="{DataTemplate local:WebViewCSS}"
        Route="WebViewCSS" />
    <ShellContent
        Title="HTML From Xml Writer"
        ContentTemplate="{DataTemplate local:HTMLFromXmlWriter}"
        Route="HTMLFromXmlWriter" />
    <ShellContent
        Title="Full Screen XSLT"
        ContentTemplate="{DataTemplate local:FullScreenXSLT}"
        Route="FullScreenXSLT" />
    <ShellContent
        Title="Split Screen XSLT (MainPage)"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent
        Title="File Picker"
        ContentTemplate="{DataTemplate local:ViewFiles}"
        Route="FilePicker" />

</Shell>
