<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiXSLT.FullScreenXSLT"
             Title="FullScreenXSLT">

    <ScrollView>
        <VerticalStackLayout>
            <Editor x:Name="XsltEditor"></Editor>
            <Label x:Name="LblError" WidthRequest="500" HeightRequest="80" Text="Info Panel" FontSize="Large" TextColor="Red" FontAttributes="Bold" />
            <Button x:Name="XsltTranslator" WidthRequest="300" HeightRequest="80" Text="Translate XSLT" Clicked="XsltTranslator_Clicked" />
            <WebView x:Name="XsltWebView" WidthRequest="1000" HeightRequest="800"></WebView>
        </VerticalStackLayout>
    </ScrollView>

    
</ContentPage>